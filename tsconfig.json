{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["ESNext"],
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "declaration": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}
